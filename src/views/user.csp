
<%view _header.csp %>


<%c++ const auto user_username = @@.get<std::string>("user_username"); %>
<%c++ const auto user_id = @@.get<std::string>("user_id"); %>
<%c++ const auto can_delete = @@.get<bool>("can_delete"); %>

<h1>User: {%user_username%}</h1>

<%c++ if(can_delete) { %>
    <form action="/user/{%user_id%}/delete" method="POST">
        <input type="submit" value="Delete">
    </form>
<%c++ } %>

<%view _footer.csp %>

